{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./lib/esm",
        "module": "ES2020",
        "declaration": true,
        "lib": ["ESNext"],
        "baseUrl": "./src",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declarationMap": true,
        "importsNotUsedAsValues": "error",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"]
}
